
<div class="row">  
  <div class="col-lg-6 col-md-7 col-sm-6"> 
    <p id="notice"><%= notice %></p>
    
    <h1>Events</h1>
    
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>Title</th>
            <th>Local</th>
            <th>Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= link_to event.title, event %></td>
              <td><%= event.local %></td>
              <td><%= event.date %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
