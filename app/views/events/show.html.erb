
<div class="row">  
  <div class="col-lg-4 col-md-5 col-sm-4">  
          <h2> Categories Filter </h2>
          <%= form_tag event_path(@event.id), :method => 'get' do %>  
          <div class="form-group">    
               <%= collection_select :subscription, :category_id, Category.all, :id, :name, {prompt: "Filter Categories"}, {:class => 'form-control'}     %>   
          </div>
          <div class="form-group">  
              <%= submit_tag "Apply Filter", class: 'btn btn-notice' %>    
            <% end %> 
         </div>
  </div> 
   <div class="col-lg-8 col-md-7 col-sm-8"> 
          <h2> <%= @event.title %> </h2>
          <h3> <%= @event.local + " - " + @event.date.strftime("%d of %B %Y") %> </h3>
          <br>
          <h4>List of Subscriptions</h4> 
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Number</th>
                  <th>Athlete</th>
                  <th>Category</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @subscriptions.each do |subscription| %>
                  <tr>
                    <td><%= subscription.number %></td>
                    <td><%= subscription.athlete.name %>  </td>
                    <td><%= subscription.category.name %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
</div>
  
  
    
