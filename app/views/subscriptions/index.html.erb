<p id="notice"><%= notice %></p>
<h1>All Results</h1>
<p>Please, select the Event and Category to see the results</p>

<div class="row">
  
  <div class="col-lg-4 col-md-7 col-sm-6">
       <%= form_tag subscriptions_path(), :method => 'get' do %>    
       <div class="form-group">
          <%= collection_select :subscription, :event_id, Event.all, :id, :title, {prompt: 'Events'}, {:class => 'form-control-lg' } %>   
        </div>
        <div class="form-group">  
          <%= collection_select :subscription, :category_id, Category.all, :id, :name, {prompt: 'Categories'},  {:class => 'form-control-lg' }  %> 
        </div>
        <div class="form-group form-check">     
          <%= submit_tag "Apply Filter", class: 'btn btn-lg btn-notice' %>
        </div>    
       <% end %> 
  </div>
  
  <div class="col-lg-8 col-md-7 col-sm-6">
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Athlete</th>
              <th>Category</th>
              <th>Event</th>
              <th>Number</th>
              <th>Tempo</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
                <% @subscriptions.each do |subscription| %>
                  <tr>
                    <td><%= subscription.athlete.name %>  </td>
                    <td><%= subscription.category.name %></td>
                    <td><%= subscription.event.title %></td>
                    <td><%= subscription.number %></td>
                    <td><%= subscription.tempo.strftime("%k:%M:%S")  %></td>
                  </tr>
                <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>

